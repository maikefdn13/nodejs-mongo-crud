<html>
<head>  
    <title>{{pageTitle}} {{h.defaultPageTitle}}</title>
    <link rel="stylesheet" href="/assets/css/template.css" />   
</head>
<body>
<header>
    <h1>Cabecalho</h1>
    {{#user}}
        Ola, {{user.name}}! <a href="/users/logout"> Sair </a>
    {{/user}}


    <hr/>    
    <ul>
        {{#h.menu}}
        <li><a href="{{slug}}">{{name}}</a></li>
        {{/h.menu}}
    </ul>
</header>

{{#flashes}}  
        {{#success}}
            <div  class="warning">{{.}}</div>
        {{/success}}
        {{#error}}
            <div  class="warning">{{.}}</div>
        {{/error}}
        {{#info}}
            <div  class="warning">{{.}}</div>
        {{/info}}        
{{/flashes}}