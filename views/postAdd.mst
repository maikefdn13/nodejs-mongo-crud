{{>header}}
<h2>Adicionar Post</h2>

<form method="POST">
    <label>
        Titulo:
        <input type="text" name="title" />
    </label>
    <br/>
    <label>
        Corpo:
        <textarea name="body"></textarea>
    </label>
    <br/>
    <label>
        Tags: <small>(Separar as tags por virgula)</small>
        <input type="text" name="tags"/>
    </label>
    <br/>
    <input type="submit" value="salvar"/>
</form>